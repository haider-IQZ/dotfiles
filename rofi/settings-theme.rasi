* {
    bg: #282828;
    fg: #ebdbb2;
    accent: #fe8019;
    
    background-color: @bg;
    text-color: @fg;
}

window {
    width: 400px;
    padding: 20px;
    border: 2px;
    border-color: @accent;
    border-radius: 10px;
}

mainbox {
    children: [inputbar, listview];
    spacing: 15px;
}

inputbar {
    padding: 10px;
    border-radius: 5px;
    background-color: #3c3836;
    children: [prompt];
}

prompt {
    text-color: @accent;
    font: "JetBrainsMono Nerd Font Bold 12";
}

listview {
    lines: 7;
    spacing: 5px;
    scrollbar: false;
}

element {
    padding: 12px;
    border-radius: 8px;
}

element selected {
    background-color: @accent;
    text-color: @bg;
}

element-text {
    font: "JetBrainsMono Nerd Font 11";
}
