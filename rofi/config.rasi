configuration {
    modi: "drun,run,filebrowser,window";
    icon-theme: "Papirus";
    show-icons: true;
    terminal: "alacritty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: "   Apps ";
    display-run: "   Run ";
    display-window: "   Window ";
    display-Network: " 󰤨  Network";
    sidebar-mode: true;
}



* {
    bg-col:  #282828;
    bg-col-light: #282828;
    border-col: #282828;
    selected-col: #282828;
    blue: #83a598;
    fg-col: #ebdbb2;
    fg-col2: #d3869b;
    grey: #928374;
    width: 600;
    font: "JetBrainsMono Nerd Font 14";
}

window {
    height: 360px;
    border: 3px;
    border-color: #427b58; /* Darker Gruvbox Green Border */
    background-color: @bg-col;
    border-radius: 10px;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [entry];
    background-color: #3c3836; /* Lighter background for the input area */
    border-radius: 6px;
    padding: 2px;
    margin: 20px 20px 0px 20px;
}



textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 12px;
    margin: 0px 0px 0px 0px;
    text-color: @fg-col;
    background-color: transparent;
    vertical-align: 0.5;
    placeholder: "Search...";
    placeholder-color: #928374;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    lines: 5;
    background-color: @bg-col;
}

element {
    padding: 5px;
    background-color: transparent;
    text-color: @fg-col;
}

element-icon {
    size: 25px;
    background-color: transparent;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    vertical-align: 0.5;
}

element selected {
    background-color: #3c3836;
    text-color: #427b58; /* Darker Gruvbox Green Text */
    border-radius: 5px;
}

mode-switcher {
    spacing: 0;
}

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
    background-color: @bg-col;
    text-color: #427b58; /* Darker Gruvbox Green */
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @blue;
    background-color: @bg-col-light;
}
