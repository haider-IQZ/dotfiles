* {
    bg-col:  rgba(10, 10, 15, 0.6);
    bg-col-light: rgba(20, 20, 25, 0.7);
    border-col: rgba(255, 255, 255, 0.1);
    selected-col: rgba(255, 255, 255, 0.1);
    blue: #89b4fa;
    fg-col: #ffffff;
    grey: #9da0b2;

    width: 500;
    font: "JetBrains Mono 12";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 550px;
    border: 1px;
    border-color: @border-col;
    background-color: @bg-col;
    border-radius: 12px;
}

mainbox {
    background-color: transparent;
    children: [inputbar, listview];
}

inputbar {
    children: [entry];
    background-color: transparent;
    padding: 30px 25px 10px 25px;
}

entry {
    padding: 10px;
    text-color: @fg-col;
    background-color: transparent;
    placeholder: "Search...";
    placeholder-color: @grey;
}

listview {
    border: 0px;
    padding: 10px 15px 15px 15px;
    margin: 0px;
    columns: 1;
    lines: 10;
    background-color: transparent;
}

element {
    padding: 8px;
    margin: 2px;
    background-color: transparent;
    text-color: @fg-col;
    border-radius: 8px;
}

element-icon {
    size: 28px;
    margin: 0 12px 0 0;
}

element-text {
    vertical-align: 0.5;
}

element selected {
    background-color:  @selected-col;
    text-color: @blue;
}
